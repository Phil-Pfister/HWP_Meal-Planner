<div class="d-flex flex-column align-items-center">
  <h2>Your Recipes</h2>
  <div class="container mx-auto">
    <div class="grid grid-cols-3 gap-4">
      {{#each recipes}}
<div class="flex flex-col items-center border border-gray-300 p-4">
            <img class="small-image" src="{{recipe.img}}" alt="{{name}}">
        <h3>{{name}}</h3>
      </div>
      {{/each}}
    </div>
  </div>
</div>